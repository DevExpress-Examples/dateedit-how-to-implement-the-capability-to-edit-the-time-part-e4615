<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:DateTimeEditProiect"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    x:Class="DateTimeEditProiect.MainWindow"
    Title="DXApplication" Height="281" Width="460"
    SnapsToDevicePixels="True" UseLayoutRounding="True"
    >
    <Grid >
        <local:DateTimeEdit HorizontalAlignment="Left" Height="57" Margin="53,103,0,0" VerticalAlignment="Top" Width="165"
                            EditValue="{Binding MyDateProperty,Mode=TwoWay}"
                            IsShowTimePanel="True" TimeFormat="Auto" x:Name="dateTimeEdit1"/>
        <dxe:TextEdit HorizontalAlignment="Left" Height="56" Margin="53,20,0,0" VerticalAlignment="Top" Width="165" EditValue="{Binding DateTime,ElementName=dateTimeEdit1}"/>
        <Label HorizontalAlignment="Left" Height="43" Margin="53,179,0,0" VerticalAlignment="Top" Width="165" Content="{Binding MyDateProperty}"/>
    </Grid>

</Window>
